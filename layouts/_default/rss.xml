{{- /* layouts/_default/rss.xml */ -}}
{{- $now := now -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML -}}
<rss version="2.0"
  xmlns:content="http://purl.org/rss/1.0/modules/content/"
  xmlns:media="http://search.yahoo.com/mrss/">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Site.BaseURL }}</link>
    <description>{{ with .Site.Params.description }}{{ . }}{{ else }}{{ .Site.Title }}{{ end }}</description>
    <language>{{ .Site.Language.Lang | default "en" }}</language>
    <lastBuildDate>{{ $now.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</lastBuildDate>

    {{- /* Emit items for whatever this feed is (home, section, taxonomy, etc.) */ -}}
    {{- range .Pages.ByDate.Reverse -}}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <guid isPermaLink="true">{{ .Permalink }}</guid>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>
      {{- with .Params.author }}<author>{{ . }}</author>{{ end }}

      {{- /* ===== Resolve an image URL (absolute) and MIME type ===== */ -}}
      {{- $imgURL := "" -}}
      {{- $imgType := "image/jpeg" -}}

      {{- /* 1) front matter: featuredImage (string path or URL) */ -}}
      {{- with .Params.featuredImage -}}
        {{- $imgURL = absURL . -}}
      {{- end -}}

      {{- /* 2) page bundle resource (first image) */ -}}
      {{- if not $imgURL -}}
        {{- $imgs := where .Resources "ResourceType" "image" -}}
        {{- if gt (len $imgs) 0 -}}
          {{- $r := index $imgs 0 -}}
          {{- $imgURL = $r.Permalink -}}
          {{- with $r.MediaType -}}
            {{- if .SubType -}}
              {{- $imgType = printf "image/%s" .SubType -}}
            {{- end -}}
          {{- end -}}
        {{- end -}}
      {{- end -}}

      {{- /* 3) first <img src="..."> in content (fallback) */ -}}
      {{- if not $imgURL -}}
        {{- $m := findRE `<img[^>]*src=["']([^"']+)["']` .Content 1 -}}
        {{- with $m -}}
          {{- $rel := replaceRE `.*src=['"]([^'"]+)['"].*` "$1" (index . 0) -}}
          {{- $imgURL = absURL $rel -}}
        {{- end -}}
      {{- end -}}

      {{- /* Output enclosure + MRSS if image resolved */ -}}
      {{- if $imgURL -}}
        <enclosure url="{{ $imgURL }}" type="{{ $imgType }}"/>
        <media:content url="{{ $imgURL }}" medium="image"/>
        <media:thumbnail url="{{ $imgURL }}"/>
      {{- end -}}

      <description>{{ .Summary | plainify }}</description>
      <content:encoded><![CDATA[{{ .Content }}]]></content:encoded>
    </item>
    {{- end -}}
  </channel>
</rss>
